{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "",
  "author": "Emre Kaplan",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run prebuild && nest start --watch",
    "start:debug": "npm run prebuild && nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "proto:auth": "sudo protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=node_modules/@grpc-monorepo/proto --ts_proto_out=src/auth node_modules/@grpc-monorepo/proto/auth.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "proto:all": "npm run proto:auth"
  },
  "dependencies": {
    "@grpc-monorepo/proto": "../../packages/monorepo-grpc-proto-files/proto",
    "@grpc/grpc-js": "^1.7.3",
    "@grpc/proto-loader": "^0.6.13",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^8.4.1",
    "@nestjs/platform-express": "^8.0.0",
    "protoc-gen-ts": "^0.8.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-proto": "^1.131.0"
  },
  "devDependencies": {
    "jest": "^27.2.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
